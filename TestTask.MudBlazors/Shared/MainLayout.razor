@page "/mainlayout"

@using Microsoft.AspNetCore.Components.Server.ProtectedBrowserStorage
@using TestTask.Core.Import
@using TestTask.Core.Import.Importers
@using TestTask.Core.Models.Categories
@using TestTask.Core.Models.Companies
@using TestTask.Core.Models.Products
@using TestTask.Core.Models.Types
@using TestTask.MudBlazors.Authentications
@using TestTask.MudBlazors.Pages.Import
@using Bromix.MudBlazor.MaterialDesignIcons
@using TestTask.MudBlazors.Pages.Table.Model

@inherits LayoutComponentBase

@inject NavigationManager Navigation
@inject ProtectedLocalStorage LocalStorage
@inject WebsiteAuthenticator WebsiteAuthenticator

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>

    <MudAppBar Elevation="0">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())"/>
        <MudSpacer />
        <AuthorizeView>

            <Authorized>
                <MudMenu FullWidth="true" ActivationEvent="@MouseEvent.MouseOver" AnchorOrigin="Origin.BottomCenter" TransformOrigin="Origin.TopCenter" Style="align-items:center">
                    <ActivatorContent>
                        <MudChip Icon="@MaterialDesignIcons.Normal.Account" Label="true" Class="pa-4"
                                 Style="@($"color:{Colors.Grey.Lighten4};background:{Colors.LightBlue.Accent4};")">
                                 @WebsiteAuthenticator.GetUsername()
                        </MudChip>
                    </ActivatorContent>
                    <ChildContent>
                            <MudMenuItem Class="pa-1 red-text text-accent-2" Style="text-align:center" OnClick="WebsiteAuthenticator.ExitAccountAsync">Sign Out</MudMenuItem>
                    </ChildContent>
                </MudMenu>
            </Authorized>

            <NotAuthorized>
                <MudTooltip Text="Sign In">
                    <MudIconButton Icon="@MaterialDesignIcons.Normal.Account" Color="Color.Inherit" OnClick="SignInPage" />
                </MudTooltip>
            </NotAuthorized>

        </AuthorizeView>
        
    </MudAppBar>

    <MudDrawer @bind-Open="_drawerOpen" Elevation="1">
        <MudDrawerHeader>
            <MudText Typo="Typo.h6">TestTask</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="my-4 pt-0">
            @Body
        </MudContainer>
    </MudMainContent>

</MudLayout>

@functions
{
    void SignInPage() => Navigation.NavigateTo($"/login/{true}");
}


@code {
    private bool _drawerOpen = false;

    private void DrawerToggle() => _drawerOpen = !_drawerOpen;
}