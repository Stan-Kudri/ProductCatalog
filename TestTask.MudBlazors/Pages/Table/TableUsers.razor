@page "/users"

@using TestTask.Core.Models.Users
@using TestTask.MudBlazors.Model

@attribute [Authorize(Roles = Role.Admin)]

<MudText Typo="Typo.h5" Align="Align.Center" Color="Color.Info" GutterBottom="true">Users</MudText>

<MudPaper>

    <MudTable Items="@items" Hover="true" Elevation="0" Dense="false" T="User">

        <ColGroup>
            <col style="width: 60%;" />
            <col style="width: 40%;" />
        </ColGroup>

        <HeaderContent>             
            <MudTd Style="text-align:center; font-size:12px">Username</MudTd>
            <MudTd Style="text-align:center; font-size:12px">Role</MudTd>
        </HeaderContent>

        <RowTemplate>
            <MudTh Style="text-align:center; font-size:12px" DataLabel="Username">@context.Username</MudTh>
            <MudTh Style="text-align:center; font-size:12px" DataLabel="Role">@context.UserRole</MudTh>
        </RowTemplate>

        <PagerContent>
            <MudTablePager HorizontalAlignment="HorizontalAlignment.Center" PageSizeOptions="_pageModel.Items" />
        </PagerContent>

    </MudTable>

</MudPaper>

