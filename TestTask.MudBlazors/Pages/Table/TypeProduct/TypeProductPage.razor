@using Bromix.MudBlazor.MaterialDesignIcons
@using TestTask.Core.Models.Types

<PageTitle>Type Product</PageTitle>

<MudPaper>

    <MudToolBar>

        <MudTextField T="string" ValueChanged="@(s=>OnSearch(s))" Placeholder="Search" Adornment="Adornment.Start"
                      AdornmentIcon="@Icons.Material.Filled.Search" IconSize="Size.Medium" Class="mt-0" Style="max-width:300px;">
        </MudTextField>

        <MudSpacer />

        <MudSelect T="SortTypeProduct" Style="align-items:end" Label="Sort" MultiSelection="true" @bind-Value="sortField.sortType" @bind-SelectedValues="sortField.SortFields"
                   SelectAll="true" SelectAllText="All" OnClose="@LoadData">
            @foreach (var item in sortField.Items)
            {
                <MudSelectItem T="SortTypeProduct" Value="@item" />
            }
        </MudSelect>

        <div style="align-items:end">
            <MudToggleIconButton Toggled="@IsAscending" ToggledChanged="@OnToggledChanged" Class="mr-5"
                                 Icon="@MaterialDesignIcons.Normal.SortAlphabeticalDescending" Color="@Color.Primary" Title="Descending" Size="Size.Large"
                                 ToggledIcon="@MaterialDesignIcons.Normal.SortAlphabeticalAscending" ToggledColor="@Color.Primary" ToggledTitle="Ascending" ToggledSize="Size.Large" />
            <MudSpacer />
        </div>

        <MudTooltip Text="Remove Filter" Placement="Placement.Top">
            <MudIconButton Icon="@MaterialDesignIcons.Normal.FilterOff" OnClick="@ClearFilter" Color="Color.Primary" Variant="Variant.Text" />
        </MudTooltip>

    </MudToolBar>

    <MudToolBar>

        <MudSpacer></MudSpacer>
        <MudTooltip Text="Add Item" Placement="Placement.Top">
            <MudIconButton Icon="@Icons.Material.Filled.Add" OnClick="@AddPage" Color="Color.Primary" Variant="Variant.Text" />
        </MudTooltip>
        <MudTooltip Text="Remove Select Items" Placement="Placement.Top">
            <MudIconButton Icon="@Icons.Material.Filled.Delete" OnClick="@Remove" Color="Color.Primary" Variant="Variant.Text" Disabled="@isSelectItems"/>
        </MudTooltip>

    </MudToolBar>

    <MudTable Items="@typeProduct" Hover="true" SortLabel="Sort By" Elevation="0" MultiSelection="true" Dense="true" T="ProductType" SelectedItemsChanged="OnSelectItems">

        <ColGroup>
            <col style="width: 60px;" />
            <col style="width: 30%;" />
            <col style="width: 30%;" />
            <col style="width: 40px;" />
        </ColGroup>
        <HeaderContent>
            <MudTh>Id</MudTh>
            <MudTh>Name</MudTh>
            <MudTh>Category</MudTh>
            <MudTh></MudTh>
        </HeaderContent>
        <RowTemplate>
            <MudTd DataLabel="Id">@context.Id</MudTd>
                <MudTd DataLabel="Name">@context.Name</MudTd>
                <MudTd DataLabel="Category">@context.Category.ToString()</MudTd>
                <MudTh Style="text-align:right">
                    <MudTooltip Text="Edit" Placement="Placement.Bottom">
                        <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.Edit" Variant="Variant.Outlined" Size="Size.Medium" Class="ml-1" OnClick="@(() => Update(context.Id))" />
                    </MudTooltip>
                    <MudTooltip Text="Remove" Placement="Placement.Bottom">
                        <MudIconButton Color="Color.Primary" Icon="@Icons.Material.Filled.Delete" Variant="Variant.Outlined" Size="Size.Medium" OnClick="@(() => Remove(context.Id))" />
                    </MudTooltip>
                </MudTh>
            </RowTemplate>

            <PagerContent>
                <MudTablePager HorizontalAlignment="HorizontalAlignment.Center" PageSizeOptions="pageModel.Items" />
            </PagerContent>

        </MudTable>

    </MudPaper>
