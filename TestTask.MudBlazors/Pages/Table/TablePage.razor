@page "/table/{SelectIndexTab:int?}"

 @using Table             
 @using TestTask.MudBlazors.Pages.Table.Dialog
 @using TestTask.MudBlazors.Pages.Table.Model
 @using TestTask.MudBlazors.Model
 @using TestTask.MudBlazors.Pages.Export
 @using TestTask.Core.Models.Companies
 @using TestTask.Core.Models.Categories
 @using TestTask.Core.Models.Types
 @using TestTask.Core.Models.Products
 @using Bromix.MudBlazor.MaterialDesignIcons

<MudPaper>
    <MudToolBar>
        <MudSpacer />
        <ExportExcel></ExportExcel>
        <MudButton StartIcon="@MaterialDesignIcons.Normal.FileImport" Color="Color.Primary" OnClick="OpenDialog">Import EXCEL</MudButton>
    </MudToolBar>
    <MudTabs Rounded="true" AlwaysShowScrollButtons="true" ActivePanelIndex="@SelectIndexTab" Border="true" Centered="true" ActivePanelIndexChanged="@NavigationSelectTab">
        <MudSpacer/>
        <MudTabPanel Text="Company">
            <TableViewPage TSortType="CompanySortType" T="Company" TItemDialog=CompanyItemDialog></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Category">
            <TableViewPage TSortType="CategoriesSortType" T="Category" TItemDialog=CategoryItemDialog></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Type Product">
            <TableViewPage TSortType="ProductTypeSortType" T="ProductType" TItemDialog=ProductTypeItemDialog></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Product">
            <TableViewPage TSortType="ProductSortType" T="Product" TItemDialog=ProductItemDialog></TableViewPage>
        </MudTabPanel>
    </MudTabs>
 </MudPaper>

