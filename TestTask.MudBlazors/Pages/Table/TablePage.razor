@page "/table/{SelectIndexTab:int?}"

 @using Table             
 @using TestTask.MudBlazors.Model
 @using TestTask.MudBlazors.Pages.Table.TypeProduct
 @using TestTask.MudBlazors.Pages.Table.Products
 @using TestTask.MudBlazors.Pages.Table.TablePages
 @using TestTask.MudBlazors.Pages.Export
 @using TestTask.Core.Models.Companies
 @using TestTask.Core.Models.Categories
 @using Bromix.MudBlazor.MaterialDesignIcons


@inject CompanyPage CompanyPage
@inject CategoryPage CategoryPage

<MudPaper>
    <MudToolBar>
        <MudSpacer />
        <ExportExcel></ExportExcel>
        <MudButton StartIcon="@MaterialDesignIcons.Normal.FileImport" Color="Color.Primary" OnClick="OpenDialog">Import EXCEL</MudButton>
    </MudToolBar>
    <MudTabs Rounded="true" AlwaysShowScrollButtons="true" ActivePanelIndex="@SelectIndexTab" Border="true" Centered="true" ActivePanelIndexChanged="@NavigationSelectTab">
        <MudSpacer/>
        <MudTabPanel Text="Company">
            <TableViewPage TSortType="CompanySortType" T="Company" DataProcessor=CompanyPage></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Category">
            <TableViewPage TSortType="CategoriesSortType" T="Category" DataProcessor=CategoryPage></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Type Product">
            <DynamicComponent Type="typeof(TypeProduct.TypeProductPage)" />
        </MudTabPanel>
        <MudTabPanel Text="Product">
            <DynamicComponent Type="typeof(Products.ProductPage)" />
        </MudTabPanel>
    </MudTabs>
 </MudPaper>

