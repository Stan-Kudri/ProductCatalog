@page "/table/"

 @using Table             
 @using TestTask.MudBlazors.Pages.Table.Dialog
 @using TestTask.MudBlazors.Pages.Table.Model
 @using TestTask.MudBlazors.Model
 @using TestTask.MudBlazors.Pages.Export
 @using TestTask.Core.Models.Companies
 @using TestTask.Core.Models.Categories
 @using TestTask.Core.Models.Types
 @using TestTask.Core.Models.Products
 @using Bromix.MudBlazor.MaterialDesignIcons

@attribute [Authorize]

<MudPaper>
    <MudToolBar>
        <MudSpacer />
        <MudButton StartIcon="@MaterialDesignIcons.Normal.FileExport" Color="Color.Tertiary" OnClick="OpenDialogExport">Export EXCEL</MudButton>
        <MudButton StartIcon="@MaterialDesignIcons.Normal.FileImport" Color="Color.Primary" OnClick="OpenDialogImport">Import EXCEL</MudButton>
    </MudToolBar>
    <MudTabs Rounded="true" AlwaysShowScrollButtons="true" Border="true" Centered="true" >
        <MudSpacer/>
        <MudTabPanel Text="Company">
            <TableViewPage TSortType="CompanySortField" T="Company" TItemDialog=CompanyItemDialog></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Category">
            <TableViewPage TSortType="CategoriesSortField" T="Category" TItemDialog=CategoryItemDialog></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Type Product">
            <TableViewPage TSortType="ProductTypeSortField" T="ProductType" TItemDialog=ProductTypeItemDialog></TableViewPage>
        </MudTabPanel>
        <MudTabPanel Text="Product">
            <TableViewPage TSortType="ProductSortField" T="Product" TItemDialog=ProductItemDialog></TableViewPage>
        </MudTabPanel>
    </MudTabs>
 </MudPaper>

