@page "/table/{SelectIndexTab:int?}"

 @using Table             
 @using TestTask.MudBlazors.Model
 @using TestTask.MudBlazors.Pages.Table.Companies
 @using TestTask.MudBlazors.Pages.Table.Categories
 @using TestTask.MudBlazors.Pages.Table.TypeProduct
 @using TestTask.MudBlazors.Pages.Table.Products
 @using Bromix.MudBlazor.MaterialDesignIcons

<MudPaper>
    <MudToolBar>
        <MudIconButton Icon="@MaterialDesignIcons.Normal.FileImport" Color="Color.Primary" OnClick="OpenDialog" Title="Import Data" />
    </MudToolBar>
    <MudTabs Rounded="true" AlwaysShowScrollButtons="true" ActivePanelIndex="@SelectIndexTab" Border="true" Centered="true" ActivePanelIndexChanged="@NavigationSelectTab">
        <MudSpacer/>
        <MudTabPanel Text="Company">
            <DynamicComponent Type="typeof(Companies.CompanyPage)" />
        </MudTabPanel>
        <MudTabPanel Text="Category">
            <DynamicComponent Type="typeof(Categories.CategoryPage)" />
        </MudTabPanel>
        <MudTabPanel Text="Type Product">
            <DynamicComponent Type="typeof(TypeProduct.TypeProductPage)" />
        </MudTabPanel>
        <MudTabPanel Text="Product">
            <DynamicComponent Type="typeof(Products.ProductPage)" />
        </MudTabPanel>
    </MudTabs>
 </MudPaper>

